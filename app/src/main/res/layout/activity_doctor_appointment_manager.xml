<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivities.DoctorAppointmentManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgBack3"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_back"
            android:src="@drawable/icon_back"
            android:padding="5dp"
            android:outlineSpotShadowColor="@color/black"
            android:paddingLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="APPOINTMENT MANAGER"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/appointmentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timeSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/accepthidden"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="TextView"
            android:visibility="invisible"
             />
        <TextView
            android:id="@+id/idHidden"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="TextView"
            android:visibility="invisible"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >
            <Button
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_time_select_round_button"
                android:text="ACCEPT"
                android:textColor="@color/white"
                android:layout_gravity="left"
                android:gravity="center"

                android:layout_marginTop="40dp"
                />

            <Button
                android:id="@+id/decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_time_select_round_button_grey"
                android:text="DECLINE"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="right"

                android:layout_marginTop="40dp"

                />




        </GridLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>